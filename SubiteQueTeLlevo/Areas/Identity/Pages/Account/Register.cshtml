@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    @*<div class="col-2">  </div>*@
    <div class="text-center"    >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group;  text-center">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group;  text-center">
                <label asp-for="Input.Password">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group;  text-center">
                <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br>
            <button style="background-color:wh; border-color:black; width:200px; height:40px; font-size: 20px" type="submit" >Registrarse</button>
              


        </form>
    </div>
