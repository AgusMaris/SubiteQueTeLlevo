@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Olvido su Contraseña?";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center">Ingrese su Email.</h4>
<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6 text-center">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group text-center">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button style="background-color:white;color:black; border-color:black; width:120x; height:40px; font-size: 20px" pe="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
    <div class="col-3"></div>



    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
