@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmacion por Email";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h4 class="text-center">Ingrese su Email.</h4>
<hr />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6 text-center">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button style="background-color:white;color:black; border-color:black; width:120px; height:40px; font-size: 20px" type="submit" class="btn btn-primary text-center">Reenviar</button>
        </form>
    </div>
    <div class="col-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
